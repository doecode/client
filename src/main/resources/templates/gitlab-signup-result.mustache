{{> wrapper/header}}
<input type="hidden" id="gitlab-signup-page-identifier"/>
<script src="https://www.google.com/recaptcha/api.js"></script>
<div class="row not-so-wide-row">
     <div class="col-lg-3 col-md-1"></div>
     <div class="col-lg-8 special-lg-8 col-md-10 col-xs-12 static-content">
	  <br/>
	  <br/>
	  {{#if had_error}}
	  <div class='row'>
	       <div class='col-xs-12 center-text has-error'>
		    <label class='control-label' style="font-size:25px;">{{message}}</label>
	       </div>
	  </div>
	  {{else}}
	  <div class='row'>
	       <div class='col-xs-12 center-text'>
		    <div style="font-size:25px;">Thank you for your interest in DOE CODE repository services. 
			 Someone will be in contact with you soon. For additional information, please contact 
			 <a href='mailto:doecoderepositories@osti.gov'>doecoderepositories@osti.gov</a> <span class='fa fa-envelope-o'></span>
		    </div>
	       </div>
	  </div>
	  {{/if}}
     </div>
     <div class="col-lg-3 col-md-1"></div>
</div>
{{> wrapper/footer}}
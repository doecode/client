{{> wrapper/header}}
<style>
    #outermost-container {
        background-image: linear-gradient(rgb(30, 111, 146), rgb(1, 53, 88) 100%);
    }

    .wrapper {
        background-color: transparent;
    }

    .footer-bottom {
        background-color: transparent;
    }

    .footer-separator {
        background-color: transparent;
        border-bottom: none;
        box-shadow: none;
    }

    .main-header {
        background-image: none !important;
        background-color: transparent !important;
    }

    .icon-row {
        color: white;
    }

    .icon-row a {
        color: white !important;
    }

    .icon-row a.icon-row-icon {
        font-size: 40px;
    }

    .icon-row-icon-text:hover {
        text-decoration: none;
    }

    .icon-row-icon-text a {
        font-size: 40px;
    }


    #homepage-searchbar-container {
        display: flex;
        flex-wrap: wrap;
        margin-left: 32%;
        margin-right: 25%;
    }

    #homepage-searchbar-container::after {
        content: '';
        width: 100%;
    }

    .homepage-adv-search-dropdown {
        display: block;
        order: 1;
        background-color: #fff;
        width: auto;
        position: absolute;
        margin: 57px 15% 0 0;
        z-index: 100;
    }

    #homepage-searchbar-container>input.homepage-searchbar {
        width: 85%;
        height: 52px;
        font-size: 20px;
    }

    .adv-search-button {
        position: inherit;
        margin-left: -25px;
    }

    #homepage-searchbar-container>button.search-btn {
        padding-left: 20px;
        padding-right: 20px;
        margin-left: 10px;
    }

    @-moz-document url-prefix(){
        #homepage-searchbar-container>button.search-btn{
            margin-left:5px;
        }
    }

    .navbar {
        min-height: 0px;
    }

    .adv-dropdown-section {
        padding-top: 10px;
    }

    .homepage-range-fields {
        display: flex;
    }

    .adv-dropdown-border-bottom {
        border-bottom: 1px solid #ccc;
    }

    /*Media Queries*/
    @media only screen and (max-width:479px) and (min-width: 320px) {

        #homepage-searchbar-container {
            margin-left: 0px;
            margin-right: 0px;
        }

        #homepage-searchbar-container>input.homepage-searchbar {
            width: 83%;
            height: auto;
            font-size: 16px;
        }

        #homepage-searchbar-container>button.search-btn {
            padding-left: 0px;
            padding-right: 0px;
            margin-left: 5px;
        }

        .header-logo-img-homepage {
            width: 300px;
        }

        .wrapper {
            min-height: calc(150vh);
        }

        .homepage-adv-search-dropdown {
            width: 88%;
        }
    }
    @media only screen and (max-width:767px) and (min-width: 480px) {

        #homepage-searchbar-container {
            margin-left: 15%;
            margin-right: 0%;
        }
        .homepage-search-btn {
            height: 35px !important;
            width: 40px !important;
            padding-left: 10px !important;
            padding-right: 10px !important;
        }
        .homepage-searchbar {
            height: inherit !important;
            font-size: 16px !important;
        }
        .wrapper {
            min-height: calc(125vh);
        }
        .homepage-adv-search-dropdown {
            margin: 60px 15% 0 0;
        }
    }
    @media only screen and (max-width:991px) and (min-width: 768px) {
        .homepage-range-fields {
            display: inline-block;
        }

        #homepage-searchbar-container {
            margin-left: 22%;
            margin-right: 20%;
        }

        .homepage-adv-search-dropdown {
            width: 55%;
            margin: 60px 15% 0 0;
        }

        .wrapper {
            min-height: calc(100vh + 205px);
        }

        .main-header {
            border-bottom: none;
        }
    }
    @media only screen and (max-width:1199px) and (min-width: 992px) {
        #homepage-searchbar-container {
            margin-left: 22%;
            margin-right: 18%;
        }

        .homepage-adv-search-dropdown {
            width: 49.5%;
        }

        .wrapper {
            min-height: calc(100vh);
        }
    }
    @media only screen and (max-width:1400px) and (min-width: 1200px) {
        #homepage-searchbar-container {
            margin-left: 25%;
            margin-right: 23%;
        }

        .homepage-adv-search-dropdown {
            width: 43%;
        }

        .wrapper {
            min-height: calc(100vh);
        }
    }
    @media only screen and (max-width:1527px) and (min-width: 1389px) {
        #homepage-searchbar-container {
            margin-left: 25%;
            margin-right: 23%;
        }

        .homepage-adv-search-dropdown {
            width: 43%;
        }

        .wrapper {
            min-height: calc(100vh);
        }
    }
    @media only screen and (min-width: 1528px) {
        
        .homepage-adv-search-dropdown {
            width: 36%;
        }

        .wrapper {
            min-height: calc(100vh);
        }
    }
    /* IE 11 specific code*/
    @media all and (-ms-high-contrast: none), (-ms-high-contrast: active){
        #homepage-adv-dropdown-container{
            position: static;
            width:85%;
            margin-top:0px;            
        }
    }
    
</style>
<input type='hidden' id='index-indicator' />
<div class="row not-so-wide-row">

{{> wrapper/header}}
<style>
	#outermost-container {
		background-image: linear-gradient(rgb(30, 111, 146), rgb(1, 53, 88) 100%);
	}

	.wrapper {
		background-color: transparent;
	}

	.footer-bottom {
		background-color: transparent;
	}

	.footer-separator {
		background-color: transparent;
		border-bottom: none;
		box-shadow: none;
	}

	.main-header {
		background-image: none !important;
		background-color: transparent !important;
	}

	.adv-search-button {
		position: inherit;
	}


	#homepage-searchbar-container {
		display: flex;
		flex-direction: row;
		margin-left: auto;
		margin-right: auto;
	}

	#homepage-searchbar-container>input.homepage-searchbar {
		height: 52px;
		font-size: 20px;
	}

	#homepage-searchbar-container>button.homepage-adv-search-btn {
		margin-left: -30px;
	}

	#homepage-searchbar-container>button.search-btn {
		padding-right: 22px;
		padding-left: 22px;
		margin-left: 10px;
	}

	.navbar {
		min-height: 0px;
	}


	.icon-row {
		color: white;
	}

	.icon-row a {
		color: white !important;
	}

	.icon-row a.icon-row-icon {
		font-size: 40px;
	}

	.icon-row-icon-text:hover {
		text-decoration: none;
	}

	.icon-row-icon-text a {
		font-size: 40px;
	}

	/*Media Queries*/

	/* Extra Small Devices, Phones */
	@media only screen and (max-width:767px) and (min-width: 480px) {
		#homepage-searchbar-container {
			width: 55%;
		}
	}

	/* Small Devices, Tablets IPAD*/
	@media only screen and (max-width:991px) and (min-width: 768px) {
		#homepage-searchbar-container {
			width: 55%;
		}
	}

	/* Medium Devices, Desktops */
	@media only screen and (max-width:1199px) and (min-width: 992px) {
		#homepage-searchbar-container {
			width: 55%;
		}
	}

	/* Large Devices, Wide Screens */
	@media only screen and (max-width:1400px) and (min-width: 1200px) {
		#homepage-searchbar-container {
			width: 50%;
		}
	}

	@media only screen and (min-width: 1401px) {
		#homepage-searchbar-container {
			width: 40%;
		}

		#homepage-searchbar-container>input.homepage-searchbar {
			margin-left: 25px;
		}
	}

	@media only screen and (max-width:991px) and (min-width: 768px) {
		.main-header {
			border-bottom: none;
		}
	}

	@media only screen and (max-width:479px) and (min-width: 320px) {
		.header-logo-img-homepage {
			width: 300px;
		}

		#homepage-searchbar-container>input.homepage-searchbar {
			height: inherit !important;
			font-size: 16px !important;
		}

		#homepage-searchbar-container>button.search-btn{
			padding-left:0px;
			padding-right:0px;
			margin-left:5px;
		}
	}
</style>

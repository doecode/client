{{> wrapper/header}}
<style>
	#outermost-container {
		background-image: linear-gradient(rgb(30, 111, 146), rgb(1, 53, 88) 100%);
	}

	.wrapper {
		background-color: transparent;
	}

	.footer-bottom {
		background-color: transparent;
	}

	.footer-separator {
		background-color: transparent;
		border-bottom: none;
		box-shadow: none;
	}

	.main-header {
		background-image: none !important;
		background-color: transparent !important;
	}

	.icon-row {
		color: white;
	}

	.icon-row a {
		color: white !important;
	}

	.icon-row a.icon-row-icon {
		font-size: 40px;
	}

	.icon-row-icon-text:hover {
		text-decoration: none;
	}

	.icon-row-icon-text a {
		font-size: 40px;
	}



	#homepage-searchbar-container {
		display: flex;
		flex-wrap: wrap;
		margin-left: 32%;
		margin-right: 25%;
	}

	#homepage-searchbar-container::after {
		content: '';
		width: 100%;
	}

	.homepage-adv-search-dropdown {
		order: 1;
		background-color: #fff;
		width: 85%;
	}

	#homepage-searchbar-container>input.homepage-searchbar {
		width: 85%;
		height: 52px;
		font-size: 20px;
	}

	.adv-search-button {
		position: inherit;
		margin-left: -25px;
	}

	#homepage-searchbar-container>button.search-btn {
		padding-left: 20px;
		padding-right: 20px;
		margin-left: 5px;
	}

	.navbar {
		min-height: 0px;
	}

	.adv-dropdown-section{
		padding-top:10px;
	}

	.homepage-range-fields{
		display:flex;
	}

	.adv-dropdown-border-bottom{
		border-bottom:1px solid #ccc;
	}

	/*Media Queries*/
	@media only screen and (max-width:479px) and (min-width: 320px) {

		#homepage-searchbar-container {
			margin-left: 0px;
			margin-right: 0px;
		}

		#homepage-searchbar-container>input.homepage-searchbar {
			width: 83%;
			height: auto;
			font-size: 16px;
		}

		#homepage-searchbar-container>button.search-btn {
			padding-left: 0px;
			padding-right: 0px;
			margin-left: 5px;
		}
	}

	@media only screen and (max-width:767px) and (min-width: 480px) {}

	@media only screen and (max-width:991px) and (min-width: 768px) {
		.homepage-range-fields{
			display:inline-block;
		}
	}

	@media only screen and (max-width:1199px) and (min-width: 992px) {}

	@media only screen and (max-width:1400px) and (min-width: 1200px) {}

	@media only screen and (min-width: 1401px) {}

	@media only screen and (max-width:991px) and (min-width: 768px) {
		.main-header {
			border-bottom: none;
		}
	}
</style>
<div class="row not-so-wide-row">
	<div class="col-xs-12">
		<span class='hide-md hide-sm hide-lg'>
			<br />
			<br />
			<br />
		</span>
		<div class='center-text'>
			<img src='/${app_name}/images/DOEcodeTitle_395-min.png' alt="DOE CODE" title='DOE CODE' class='header-logo-img-homepage' />
		</div>
		<br />
		<div class='homepage-subtext center-text hide-xs'>
			U.S. Department of Energy
			<br>
			Office of Scientific and Technical Information
		</div>
		<br />
		<br />
		<span class='hide-xs'>
			<br />
			<br />
		</span>
		<div id='homepage-searchbar-container'>
			<!--Homepage search bar-->
			<input class="pure-input-1 search-box homepage-searchbar" title="Search DOE CODE" placeholder="Search DOE CODE for submitted software entries" type="text">
			<!--Advanced search button-->
			<button title="Toggle Advanced Search Dropdown" class="adv-search-button homepage-adv-search-btn hide-xs" type="button">
				<span class="fa fa-caret-down adv-search-button-icon"></span>
			</button>
			<!--Search Button-->
			<button title="Submit" type="button" class="pure-button button-success search-btn homepage-search-btn">
				<span class="fa fa-search"></span>
			</button>
			<!--ADV Search Dropdown-->
			<div class='homepage-adv-search-dropdown hide-xs'>
				<div style='padding-left:25px;padding-right:25px;' class='pure-form'>
					<div class='adv-dropdown-border-bottom'>
						<br />
						<label class='adv-search-dropdown-label'>Advanced Search Options</label>
					</div>
					<br />
					<!--Software Title-->
					<div class='adv-dropdown-section'>
						<label class='homepage-adv-search-dropdown-label' for='homepage-searchbar-software_title'>Software Title:</label>
						<input id='homepage-searchbar-software_title' class='pure-input-1' title='Software title' data-field='software_title' type='text' />
					</div>
					<!--Developers/Contributors-->
					<div class='adv-dropdown-section'>
						<label class='homepage-adv-search-dropdown-label' for='homepage-searchbar-developers_contributors'>Developers / Contributors:</label>
						<input id="homepage-searchbar-developers_contributors" title="Developers / Contributors" class="pure-input-1" type="text">
					</div>
					<!--Identifier Numbers-->
					<div class='adv-dropdown-section'>
						<label class='homepage-adv-search-dropdown-label' for='homepage-searchbar-identifier_numbers'>Identifier Numbers:</label>
						<input id="homepage-searchbar-identifier_numbers" title="Identifier Numbers" class="pure-input-1" type="text">
					</div>
					<!--Release Date-->
					<div class='adv-dropdown-section'>
						<label class='homepage-adv-search-dropdown-label' for='homepage-searchbar-date_earliest'>Release Date:</label>
						<div class='homepage-range-fields'>
							<input placeholder="MM/DD/YYYY" class="pure-input-1 doecode-datepicker " id="homepage-searchbar-date_earliest" title="Earliest Release Date" type="text">
							<span class="to-field hide-sm">&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<label for="homepage-searchbar-date_latest" class="homepage-adv-search-dropdown-label">to</label>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</span>
							<input placeholder="MM/DD/YYYY" class="pure-input-1 doecode-datepicker " id="homepage-searchbar-date_latest" title="Latest Release Date" type="text">
						</div>
					</div>
					<div class='adv-dropdown-border-bottom'>
						<br />
					</div>
					<div class='adv-dropdown-section'>

					</div>
				</div>
			</div>
			<br />
		</div>
		<span class='hide-md hide-sm hide-lg'>
			<br />
			<br />
			<br />
			<div class='homepage-subtext center-text'>
				U.S. Department of Energy
				<br>
				Office of Scientific and Technical Information
			</div>
		</span>
	</div>

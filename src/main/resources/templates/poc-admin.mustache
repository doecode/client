			 <input type='text' id='new-site-code' class='form-control pure-input-1' style='display:none;'/>
			 <br/>
			 <table id="poc-admin-email-list" class="table table-hover table-striped">
			      <thead>
				   <tr>
					<th>Email Address</th>
					<th></th>
				   </tr>
			      </thead>
			      <tbody>
				   <tr>
					<td><input type="text" placeholder="New POC Email Address" id="new-poc-email-address" class="form-control pure-input-1"/></td>
					<td><span class="fa fa-plus-circle poc-add-new-email" title="Add New Email"></span></td>
				   </tr>
			      </tbody>
			 </table>
		    </div>
	       </div>
	  </div>
     </div>
</div>

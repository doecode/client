<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>gov.osti</groupId>
    <artifactId>doecode</artifactId>
    <version>1.2</version>
    <name>DOE Code Web Application (Client)</name>
    <packaging>war</packaging>
    <repositories>
        <repository>
            <id>nexus</id>
            <url>http://git.osti.gov/repository/maven-releases</url>
        </repository>
    </repositories>
    <distributionManagement>
        <repository>
            <id>nexus</id>
            <name>Releases</name>
            <url>http://git.osti.gov/repository/maven-releases</url>
        </repository>
    </distributionManagement>
    <properties>
        <jackson.version>2.9.0</jackson.version>
        <handlebars.version>4.0.6</handlebars.version>
        <httpclient.version>4.5.2</httpclient.version>
        <logback.version>1.2.3</logback.version>
        <session_timeout>45</session_timeout>
        <app_name>doecode</app_name>
        <gitlab_submit_email></gitlab_submit_email>
        <gitlab_from_email></gitlab_from_email>
        <smtpHost></smtpHost>
        <gitlab_recaptcha_site_key></gitlab_recaptcha_site_key>
        <gitlab_recaptcha_secret_key></gitlab_recaptcha_secret_key>
        <google_analytics_id></google_analytics_id>
        <google_analytics_domain></google_analytics_domain>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>
    </properties>
    <!--
        You will need to add your own profiles into this pom.xml, or use profiles stored in your local settings.xml
        <profile>
            <id>profile-name</id>
            <properties>
                <environment_url>URL to your tomcat server</environment_url>
                <username>username of tomcat server</username>
                <password>Password of your tomcat server</password>
                <apiURL>https://www.osti.gov/doecodeapi/services/</apiURL>
                <apiBackendURL>URL to either a local version of the DOE CODE API, or the https://www. version</apiBackendURL>
                <siteURL>Your local url for your instance of this application</siteURL>
                <authorityapiURL>https://www.osti.gov/elink/api/authorities/</authorityapiURL>
                <app_name>name of app</app_name>
                <smtpHost>SMTP host for email sending</smtpHost>
                <gitlab_submit_email>email for gitlab submission</gitlab_submit_email>
                <gitlab_from_email>Email that the gitlab submission is from</gitlab_from_email>
                <gitlab_recaptcha_site_key>Key for your instance of captcha, should you use it</gitlab_recaptcha_site_key>
                <gitlab_recaptcha_secret_key>Key for your instance of captcha, should you use it</gitlab_recaptcha_secret_key>
            </properties>
        </profile>
    -->
    <build>
        <finalName>${app_name}</finalName>
        <plugins>
            <plugin>
                <groupId>com.samaxes.maven</groupId>
                <artifactId>minify-maven-plugin</artifactId>
                <version>1.7.6</version>
                <executions>
                    <!--Minify Javascript Files-->
                    <execution>
                        <id>minify-base</id>
                        <phase>package</phase>
                        <configuration>
                            <charset>UTF-8</charset>
                            <webappSourceDir>${project.build.directory}/${project.build.finalName}</webappSourceDir>
                            <webappTargetDir>${project.build.directory}/${project.build.finalName}</webappTargetDir>
                            <jsSourceDir>js</jsSourceDir>
                            <jsSourceFiles>
                                <jsSourceFile>doecode.js</jsSourceFile>
                            </jsSourceFiles>
                            <jsFinalFile>doecode.js</jsFinalFile>
                            <nosuffix>true</nosuffix>
                        </configuration>
                        <goals>
                            <goal>minify</goal>
                        </goals>
                    </execution>
                    <execution>
                        <id>minify-dissemination</id>
                        <phase>package</phase>
                        <configuration>
                            <charset>UTF-8</charset>
                            <webappSourceDir>${project.build.directory}/${project.build.finalName}</webappSourceDir>
                            <webappTargetDir>${project.build.directory}/${project.build.finalName}</webappTargetDir>
                            <jsSourceDir>js</jsSourceDir>
                            <jsSourceFiles>
                                <jsSourceFile>dissemination.js</jsSourceFile>
                            </jsSourceFiles>
                            <jsFinalFile>dissemination.js</jsFinalFile>
                            <nosuffix>true</nosuffix>
                        </configuration>
                        <goals>
                            <goal>minify</goal>
                        </goals>
                    </execution>
                    <execution>
                        <id>minify-input</id>
                        <phase>package</phase>
                        <configuration>
                            <charset>UTF-8</charset>
                            <webappSourceDir>${project.build.directory}/${project.build.finalName}</webappSourceDir>
                            <webappTargetDir>${project.build.directory}/${project.build.finalName}</webappTargetDir>
                            <jsSourceDir>js</jsSourceDir>
                            <jsSourceFiles>
                                <jsSourceFile>input.js</jsSourceFile>
                            </jsSourceFiles>
                            <jsFinalFile>input.js</jsFinalFile>
                            <nosuffix>true</nosuffix>
                        </configuration>
                        <goals>
                            <goal>minify</goal>
                        </goals>
                    </execution>
                    <execution>
                        <id>minify-user</id>
                        <phase>package</phase>
                        <configuration>
                            <charset>UTF-8</charset>
                            <webappSourceDir>${project.build.directory}/${project.build.finalName}</webappSourceDir>
                            <webappTargetDir>${project.build.directory}/${project.build.finalName}</webappTargetDir>
                            <jsSourceDir>js</jsSourceDir>
                            <jsSourceFiles>
                                <jsSourceFile>user.js</jsSourceFile>
                            </jsSourceFiles>
                            <jsFinalFile>user.js</jsFinalFile>
                            <nosuffix>true</nosuffix>
                        </configuration>
                        <goals>
                            <goal>minify</goal>
                        </goals>
                    </execution>
                    <execution>
                        <id>minify-utils</id>
                        <phase>package</phase>
                        <configuration>
                            <charset>UTF-8</charset>
                            <webappSourceDir>${project.build.directory}/${project.build.finalName}</webappSourceDir>
                            <webappTargetDir>${project.build.directory}/${project.build.finalName}</webappTargetDir>
                            <jsSourceDir>js/utils</jsSourceDir>
                            <jsSourceFiles>
                                <jsSourceFile>utils.js</jsSourceFile>
                            </jsSourceFiles>
                            <jsFinalFile>utils.js</jsFinalFile>
                            <nosuffix>true</nosuffix>
                        </configuration>
                        <goals>
                            <goal>minify</goal>
                        </goals>
                    </execution>
                    <execution>
                        <id>minify-other</id>
                        <phase>package</phase>
                        <configuration>
                            <charset>UTF-8</charset>
                            <webappSourceDir>${project.build.directory}/${project.build.finalName}</webappSourceDir>
                            <webappTargetDir>${project.build.directory}/${project.build.finalName}</webappTargetDir>
                            <jsSourceDir>js</jsSourceDir>
                            <jsSourceFiles>
                                <jsSourceFile>other.js</jsSourceFile>
                            </jsSourceFiles>
                            <jsFinalFile>other.js</jsFinalFile>
                            <nosuffix>true</nosuffix>
                        </configuration>
                        <goals>
                            <goal>minify</goal>
                        </goals>
                    </execution>
                    <!--Minify Everything css files-->
                    <execution>
                        <id>minify-everything-css</id>
                        <phase>package</phase>
                        <configuration>
                            <charset>UTF-8</charset>
                            <webappSourceDir>${project.build.directory}/${project.build.finalName}</webappSourceDir>
                            <webappTargetDir>${project.build.directory}/${project.build.finalName}</webappTargetDir>
                            <cssSourceDir>css</cssSourceDir>
                            <cssSourceFiles>
                                <cssSourceFile>font-awesome-4.7.0/css/font-awesome.min.css</cssSourceFile>
                                <cssSourceFile>purecss/purecss.min.css</cssSourceFile>
                                <cssSourceFile>bootstrap-3.3.7-dist/css/bootstrap.min.css</cssSourceFile>                                                                                   
                                <cssSourceFile>doecode-fonts.css</cssSourceFile>
                                <cssSourceFile>doecode.css</cssSourceFile>
                                <cssSourceFile>doecode-media-queries.css</cssSourceFile>
                            </cssSourceFiles>
                            <cssFinalFile>doecode-css.css</cssFinalFile>
                            <nosuffix>true</nosuffix>
                        </configuration>
                        <goals>
                            <goal>minify</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
            <!--Replacer Plugin-->
            <plugin>
                <groupId>com.google.code.maven-replacer-plugin</groupId>
                <artifactId>replacer</artifactId>
                <version>1.5.2</version>
                <executions>
                    <execution>
                        <id>replace-url-content</id>
                        <phase>package</phase>
                        <goals>
                            <goal>replace</goal>
                        </goals>
                        <configuration>
                            <includes>
                                <include>target/**/WEB-INF/web.xml</include>
                                <include>target/**/utils/utils.js</include>
                                <include>target/**/common-functions.js</include>
                                <include>target/**/doecode-css.css</include>
                                <include>target/**/font-awesome-min.css</include>
                                <include>target/**/pure-css-min.css</include>
                                <include>target/**/bootstrap-min.css</include>
                                <include>target/**/doecode-min.css</include>
                            </includes>
                            <replacements>
                                <replacement>
                                    <token>@api.url@</token>
                                    <value>${apiURL}</value>
                                </replacement>
                                <replacement>
                                    <token>@api.backend.url@</token>
                                    <value>${apiBackendURL}</value>
                                </replacement>
                                <replacement>
                                    <token>@site.url@</token>
                                    <value>${siteURL}</value>
                                </replacement>
                                <replacement>
                                    <token>@authorityapi.url@</token>
                                    <value>${authorityapiURL}</value>
                                </replacement>
                                <replacement>
                                    <token>../fonts/fontawesome</token>
                                    <value>/${app_name}/css/font-awesome-4.7.0/fonts/fontawesome</value>
                                </replacement>
                                <replacement>
                                    <token>@session_timeout@</token>
                                    <value>${session_timeout}</value>
                                </replacement>
                                <replacement>
                                    <token>@app_name@</token>
                                    <value>${app_name}</value>
                                </replacement>
                                <replacement>
                                    <token>@gitlab_submit_email@</token>
                                    <value>${gitlab_submit_email}</value>
                                </replacement>
                                <replacement>
                                    <token>@gitlab_from_email@</token>
                                    <value>${gitlab_from_email}</value>
                                </replacement>
                                <replacement>
                                    <token>@smtpHost@</token>
                                    <value>${smtpHost}</value>
                                </replacement>
                                <replacement>
                                    <token>@recaptcha_sitekey@</token>
                                    <value>${gitlab_recaptcha_site_key}</value>
                                </replacement>
                                <replacement>
                                    <token>@recaptcha_secretkey@</token>
                                    <value>${gitlab_recaptcha_secret_key}</value>
                                </replacement>
                                <replacement>
                                    <token>@google_analytics_id@</token>
                                    <value>${google_analytics_id}</value>
                                </replacement>
                                <replacement>
                                    <token>@google_analytics_domain@</token>
                                    <value>${google_analytics_domain}</value>
                                </replacement>
                            </replacements>
                        </configuration>
                    </execution>     
                </executions>
            </plugin>
            <plugin>
                <groupId>org.apache.tomcat.maven</groupId>
                <artifactId>tomcat7-maven-plugin</artifactId>
                <version>2.2</version>
                <configuration>
                    <url>${environment_url}</url>
                    <username>${username}</username>
                    <password>${password}</password>
                    <warFile>${project.build.directory}/${app_name}.war</warFile>
                    <path>/${project.build.finalName}</path>
                </configuration>
            </plugin>
            <plugin>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>2.3.2</version>
                
                <configuration>
                    <source>1.8</source>
                    <target>1.8</target>
                </configuration>
            </plugin>
            <!--Building Plugin-->
            <plugin>                
                <artifactId>maven-war-plugin</artifactId>                
                <version>3.1.0</version>                
                <executions>                    
                    <execution>                        
                        <id>prepare-war</id>                        
                        <phase>package</phase>                        
                        <goals>                            
                            <goal>war</goal>                        
                        </goals>                        
                        <configuration>                            
                            <useCache>true</useCache>                            
                            <archiveClasses>true</archiveClasses>                    
                        </configuration>                    
                    </execution>                    
                    <execution>                        
                        <id>default-war</id>                        
                        <phase>package</phase>                        
                        <goals>                            
                            <goal>war</goal>                        
                        </goals>                        
                        <configuration>                     
                            <warSourceDirectory>${basedir}/web</warSourceDirectory>                            
                            <webXml>${basedir}/web/WEB-INF/web.xml</webXml>           
                            <webResources>
                                <!--Copies the logging properties file into the /classes directory so logging works-->                              
                                <resource>                                    
                                    <directory>${basedir}/web/WEB-INF</directory>                                    
                                    <targetPath>WEB-INF/classes</targetPath>
                                    <excludes>                                        
                                        <exclude>**/web.xml</exclude>
                                        <exclude>**/templates/**</exclude>
                                    </excludes> 
                                    <includes>
                                        <include>**/logback.xml</include>
                                    </includes>                       
                                </resource>                             
                            </webResources>                   
                        </configuration>                    
                    </execution>    
                </executions>            
            </plugin>
        </plugins>
    </build>
    <dependencies>
        <!--Servlet API-->
        <dependency>
            <groupId>javax.servlet</groupId>
            <artifactId>javax.servlet-api</artifactId>
            <version>3.1.0</version>
            <scope>provided</scope>
        </dependency>
        <!--Jackson and handlebars (templates)-->
        <dependency>
            <groupId>com.github.jknack</groupId>
            <artifactId>handlebars</artifactId>
            <version>${handlebars.version}</version>
        </dependency>
        <dependency>
            <groupId>com.github.jknack</groupId>
            <artifactId>handlebars-jackson2</artifactId>
            <version>${handlebars.version}</version>
        </dependency>
        <dependency>
            <groupId>com.fasterxml.jackson.core</groupId>
            <artifactId>jackson-databind</artifactId>
            <version>${jackson.version}</version>
        </dependency>
        <!-- Apache HTTP components for connector communication -->
        <dependency>
            <groupId>org.apache.httpcomponents</groupId>
            <artifactId>httpclient</artifactId>
            <version>${httpclient.version}</version>
        </dependency>
        <dependency>
            <groupId>org.apache.commons</groupId>
            <artifactId>commons-dbcp2</artifactId>
            <version>2.1.1</version>
        </dependency>
        <!--Apache Commons-->
        <dependency>
            <groupId>org.apache.commons</groupId>
            <artifactId>commons-lang3</artifactId>
            <version>3.7</version>
        </dependency>
        <dependency>
            <groupId>commons-io</groupId>
            <artifactId>commons-io</artifactId>
            <version>2.6</version>
        </dependency>
        <dependency>
            <groupId>org.apache.commons</groupId>
            <artifactId>commons-email</artifactId>
            <version>1.5</version>
        </dependency>
        <!--Jsoup (for cleaning out script tags to prevent XSS attacks)-->
        <dependency>
            <groupId>org.jsoup</groupId>
            <artifactId>jsoup</artifactId>
            <version>1.11.2</version>
        </dependency>
        <!--Logging-->
        <dependency>
            <groupId>ch.qos.logback</groupId>
            <artifactId>logback-classic</artifactId>
            <version>${logback.version}</version>
        </dependency>
        <dependency>
            <groupId>ch.qos.logback</groupId>
            <artifactId>logback-core</artifactId>
            <version>${logback.version}</version>
        </dependency>
        <dependency>
            <groupId>org.slf4j</groupId>
            <artifactId>slf4j-api</artifactId>
            <version>1.7.25</version>
        </dependency>
    </dependencies>
</project>

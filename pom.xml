<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>gov.osti</groupId>
    <artifactId>doecode</artifactId>
    <version>2.0</version>
    <packaging>war</packaging>
    <repositories>
        <repository>
            <id>nexus</id>
            <url>http://git.osti.gov/repository/maven-releases</url>
        </repository>
    </repositories>
    <distributionManagement>
        <repository>
            <id>nexus</id>
            <name>Releases</name>
            <url>http://git.osti.gov/repository/maven-releases</url>
        </repository>
    </distributionManagement>
    <properties>
        <jackson.version>2.9.0</jackson.version>
        <httpclient.version>4.5.2</httpclient.version>
        <session_timeout>30</session_timeout>
    </properties>
    <!--
        You will need to add your own profiles into this pom.xml, or use profiles stored in your local settings.xml
        <profile>
            <id>profile-name</id>
            <properties>
                <environment_url>URL to your tomcat server</environment_url>
                <username>username of tomcat server</username>
                <password>Password of your tomcat server</password>
                <apiURL>https://www.osti.gov/doecodeapi/services/</apiURL>
                <apiBackendURL>URL to either a local version of the DOE CODE API, or the https://www. version</apiBackendURL>
                <siteURL>Your local url for your instance of this application</siteURL>
                <authorityapiURL>https://www.osti.gov/elink/api/authorities/</authorityapiURL>
            </properties>
        </profile>
    -->
    <build>
        <finalName>${project.artifactId}</finalName>
        <plugins>
            <plugin>
                <groupId>com.samaxes.maven</groupId>
                <artifactId>minify-maven-plugin</artifactId>
                <version>1.7.6</version>
                <executions>
                    <!--Minify Javascript Files-->
                    <execution>
                        <id>minify-base</id>
                        <phase>package</phase>
                        <configuration>
                            <charset>UTF-8</charset>
                            <webappSourceDir>${project.build.directory}/${project.build.finalName}</webappSourceDir>
                            <webappTargetDir>${project.build.directory}/${project.build.finalName}</webappTargetDir>
                            <jsSourceDir>js</jsSourceDir>
                            <jsSourceFiles>
                                <jsSourceFile>doecode.js</jsSourceFile>
                            </jsSourceFiles>
                            <jsFinalFile>doecode.js</jsFinalFile>
                            <nosuffix>true</nosuffix>
                        </configuration>
                        <goals>
                            <goal>minify</goal>
                        </goals>
                    </execution>
                    <execution>
                        <id>minify-dissemination</id>
                        <phase>package</phase>
                        <configuration>
                            <charset>UTF-8</charset>
                            <webappSourceDir>${project.build.directory}/${project.build.finalName}</webappSourceDir>
                            <webappTargetDir>${project.build.directory}/${project.build.finalName}</webappTargetDir>
                            <jsSourceDir>js</jsSourceDir>
                            <jsSourceFiles>
                                <jsSourceFile>dissemination.js</jsSourceFile>
                            </jsSourceFiles>
                            <jsFinalFile>dissemination.js</jsFinalFile>
                            <nosuffix>true</nosuffix>
                        </configuration>
                        <goals>
                            <goal>minify</goal>
                        </goals>
                    </execution>
                    <execution>
                        <id>minify-input</id>
                        <phase>package</phase>
                        <configuration>
                            <charset>UTF-8</charset>
                            <webappSourceDir>${project.build.directory}/${project.build.finalName}</webappSourceDir>
                            <webappTargetDir>${project.build.directory}/${project.build.finalName}</webappTargetDir>
                            <jsSourceDir>js</jsSourceDir>
                            <jsSourceFiles>
                                <jsSourceFile>input.js</jsSourceFile>
                            </jsSourceFiles>
                            <jsFinalFile>input.js</jsFinalFile>
                            <nosuffix>true</nosuffix>
                        </configuration>
                        <goals>
                            <goal>minify</goal>
                        </goals>
                    </execution>
                    <execution>
                        <id>minify-user</id>
                        <phase>package</phase>
                        <configuration>
                            <charset>UTF-8</charset>
                            <webappSourceDir>${project.build.directory}/${project.build.finalName}</webappSourceDir>
                            <webappTargetDir>${project.build.directory}/${project.build.finalName}</webappTargetDir>
                            <jsSourceDir>js</jsSourceDir>
                            <jsSourceFiles>
                                <jsSourceFile>user.js</jsSourceFile>
                            </jsSourceFiles>
                            <jsFinalFile>user.js</jsFinalFile>
                            <nosuffix>true</nosuffix>
                        </configuration>
                        <goals>
                            <goal>minify</goal>
                        </goals>
                    </execution>
                    <execution>
                        <id>minify-utils</id>
                        <phase>package</phase>
                        <configuration>
                            <charset>UTF-8</charset>
                            <webappSourceDir>${project.build.directory}/${project.build.finalName}</webappSourceDir>
                            <webappTargetDir>${project.build.directory}/${project.build.finalName}</webappTargetDir>
                            <jsSourceDir>js/utils</jsSourceDir>
                            <jsSourceFiles>
                                <jsSourceFile>utils.js</jsSourceFile>
                            </jsSourceFiles>
                            <jsFinalFile>utils.js</jsFinalFile>
                            <nosuffix>true</nosuffix>
                        </configuration>
                        <goals>
                            <goal>minify</goal>
                        </goals>
                    </execution>
                    <!--Minify Everything css files-->
                    <execution>
                        <id>minify-everything-css</id>
                        <phase>package</phase>
                        <configuration>
                            <charset>UTF-8</charset>
                            <webappSourceDir>${project.build.directory}/${project.build.finalName}</webappSourceDir>
                            <webappTargetDir>${project.build.directory}/${project.build.finalName}</webappTargetDir>
                            <cssSourceDir>css</cssSourceDir>
                            <cssSourceFiles>
                                <cssSourceFile>font-awesome-4.7.0/css/font-awesome.min.css</cssSourceFile>
                                <cssSourceFile>jquery-ui-themes-1.12.1/base/jquery-ui.min.css</cssSourceFile>
                                <cssSourceFile>purecss/purecss.min.css</cssSourceFile>
                                <cssSourceFile>bootstrap-3.3.7-dist/css/bootstrap.min.css</cssSourceFile>
                                <cssSourceFile>bootstrap-3.3.7-dist/css/bootstrap-theme.min.css</cssSourceFile>
                                <cssSourceFile>DataTables-1.10.16/css/jquery.dataTables.min.css</cssSourceFile>
                                <cssSourceFile>Responsive-2.2.0/css/responsive.dataTables.min.css</cssSourceFile>
                                <cssSourceFile>chosen/chosen.css</cssSourceFile>
                                <cssSourceFile>dropzone/basic.min.css</cssSourceFile>
                                <cssSourceFile>dropzone/dropzone.min.css</cssSourceFile>                                
                                <cssSourceFile>doecode-fonts.css</cssSourceFile>
                                <cssSourceFile>doecode.css</cssSourceFile>
                            </cssSourceFiles>
                            <cssFinalFile>doecode-css.css</cssFinalFile>
                            <nosuffix>true</nosuffix>
                        </configuration>
                        <goals>
                            <goal>minify</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
            <!--Replacer Plugin-->
            <plugin>
                <groupId>com.google.code.maven-replacer-plugin</groupId>
                <artifactId>replacer</artifactId>
                <version>1.5.2</version>
                <executions>
                    <execution>
                        <id>replace-url-content</id>
                        <phase>package</phase>
                        <goals>
                            <goal>replace</goal>
                        </goals>
                        <configuration>
                            <includes>
                                <include>target/**/WEB-INF/web.xml</include>
                                <include>target/**/utils/utils.js</include>
                                <include>target/**/common-functions.js</include>
                                <include>target/**/doecode-css.css</include>
                                <include>target/**/font-awesome-min.css</include>
                                <include>target/**/jquery-ui-min.css</include>
                                <include>target/**/pure-css-min.css</include>
                                <include>target/**/bootstrap-min.css</include>
                                <include>target/**/datatables-min.css</include>
                                <include>target/**/chosen-min.css</include>
                                <include>target/**/dropzone-min.css</include>
                                <include>target/**/doecode-min.css</include>
                            </includes>
                            <replacements>
                                <replacement>
                                    <token>@api.url@</token>
                                    <value>${apiURL}</value>
                                </replacement>
                                <replacement>
                                    <token>@api.backend.url@</token>
                                    <value>${apiBackendURL}</value>
                                </replacement>
                                <replacement>
                                    <token>@site.url@</token>
                                    <value>${siteURL}</value>
                                </replacement>
                                <replacement>
                                    <token>@authorityapi.url@</token>
                                    <value>${authorityapiURL}</value>
                                </replacement>
                                <replacement>
                                    <token>chosen-sprite.png</token>
                                    <value>/doecode/css/chosen/chosen-sprite.png</value>
                                </replacement>
                                <replacement>
                                    <token>images/ui-icons_</token>
                                    <value>/doecode/css/jquery-ui-themes-1.12.1/base/images/ui-icons_</value>
                                </replacement>
                                <replacement>
                                    <token>../images/sort_both.png</token>
                                    <value>/doecode/css/DataTables-1.10.16/images/sort_both.png</value>
                                </replacement>
                                <replacement>
                                    <token>../images/sort_asc.png</token>
                                    <value>/doecode/css/DataTables-1.10.16/images/sort_asc.png</value>
                                </replacement>
                                <replacement>
                                    <token>../images/sort_desc.png</token>
                                    <value>/doecode/css/DataTables-1.10.16/images/sort_desc.png</value>
                                </replacement>
                                <replacement>
                                    <token>../fonts/fontawesome</token>
                                    <value>/doecode/css/font-awesome-4.7.0/fonts/fontawesome</value>
                                </replacement>
                                <replacement>
                                    <token>@session_timeout@</token>
                                    <value>${session_timeout}</value>
                                </replacement>
                            </replacements>
                        </configuration>
                    </execution>
                                       
                </executions>
            </plugin>
            <plugin>
                <groupId>org.apache.tomcat.maven</groupId>
                <artifactId>tomcat7-maven-plugin</artifactId>
                <version>2.2</version>
                <configuration>
                    <url>${environment_url}</url>
                    <username>${username}</username>
                    <password>${password}</password>
                </configuration>
            </plugin>
            <plugin>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>2.3.2</version>
                <configuration>
                    <source>1.8</source>
                    <target>1.8</target>
                </configuration>
            </plugin>
            <!--Building Plugin-->
            <plugin>                
                <artifactId>maven-war-plugin</artifactId>                
                <version>2.6</version>                
                <executions>                    
                    <execution>                        
                        <id>prepare-war</id>                        
                        <phase>package</phase>                        
                        <goals>                            
                            <goal>war</goal>                        
                        </goals>                        
                        <configuration>                            
                            <useCache>true</useCache>                            
                            <archiveClasses>true</archiveClasses>                        
                        </configuration>                    
                    </execution>                    
                    <execution>                        
                        <id>default-war</id>                        
                        <phase>package</phase>                        
                        <goals>                            
                            <goal>war</goal>                        
                        </goals>                        
                        <configuration>                            
                            <warSourceDirectory>${basedir}/web</warSourceDirectory>                            
                            <webXml>${basedir}/web/WEB-INF/web.xml</webXml>           
                            <webResources>
                                <!--Copies the logging properties file into the /classes directory so logging works-->                              
                                <resource>                                    
                                    <directory>${basedir}/web/WEB-INF</directory>                                    
                                    <targetPath>WEB-INF/classes</targetPath>                                    
                                    <includes>
                                        <include>**/logging.properties</include>
                                    </includes>                          
                                </resource>                             
                            </webResources>                   
                        </configuration>                    
                    </execution>    
                </executions>            
            </plugin>
        </plugins>
    </build>
    <dependencies>
        <dependency>
            <groupId>javax.servlet</groupId>
            <artifactId>servlet-api</artifactId>
            <version>2.5</version>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>com.eclipsesource.minimal-json</groupId>
            <artifactId>minimal-json</artifactId>
            <version>0.9.4</version>
        </dependency>
        <dependency>
            <groupId>org.apache.commons</groupId>
            <artifactId>commons-dbcp2</artifactId>
            <version>2.1.1</version>
        </dependency>
        <dependency>
            <groupId>com.github.jknack</groupId>
            <artifactId>handlebars</artifactId>
            <version>4.0.6</version>
        </dependency>

        <dependency>
            <groupId>com.github.jknack</groupId>
            <artifactId>handlebars-jackson2</artifactId>
            <version>4.0.6</version>
        </dependency>
        <dependency>
            <groupId>com.fasterxml.jackson.core</groupId>
            <artifactId>jackson-annotations</artifactId>
            <version>${jackson.version}</version>
            <type>jar</type>
        </dependency>
        <dependency>
            <groupId>com.fasterxml.jackson.core</groupId>
            <artifactId>jackson-databind</artifactId>
            <version>${jackson.version}</version>
            <type>jar</type>
        </dependency>
        <dependency>
            <groupId>com.fasterxml.jackson.dataformat</groupId>
            <artifactId>jackson-dataformat-yaml</artifactId>
            <version>${jackson.version}</version>
            <type>jar</type>
        </dependency>
        <dependency>
            <groupId>com.fasterxml.jackson.dataformat</groupId>
            <artifactId>jackson-dataformat-xml</artifactId>
            <version>${jackson.version}</version>
            <type>jar</type>
        </dependency>
        <dependency>
            <groupId>com.fasterxml.jackson.dataformat</groupId>
            <artifactId>jackson-dataformat-csv</artifactId>
            <version>${jackson.version}</version>
            <type>jar</type>
        </dependency>
        <!-- Apache HTTP components for connector communication -->
        <dependency>
            <groupId>org.apache.httpcomponents</groupId>
            <artifactId>httpclient</artifactId>
            <version>${httpclient.version}</version>
            <type>jar</type>
        </dependency>
                
        <!-- Apache HTTP multipart form upload -->
        <dependency>
            <groupId>org.apache.httpcomponents</groupId>
            <artifactId>httpmime</artifactId>
            <version>${httpclient.version}</version>
            <type>jar</type>
        </dependency>
        <dependency>
            <groupId>org.slf4j</groupId>
            <artifactId>slf4j-api</artifactId>
            <version>1.6.6</version>
        </dependency>
        <dependency>
            <groupId>org.slf4j</groupId>
            <artifactId>slf4j-jdk14</artifactId>
            <version>1.6.6</version>
        </dependency>
        <dependency>
            <groupId>commons-lang</groupId>
            <artifactId>commons-lang</artifactId>
            <version>2.6</version>
        </dependency>
        <dependency>
            <groupId>javax.ws.rs</groupId>
            <artifactId>javax.ws.rs-api</artifactId>
            <version>2.0</version>
            <type>jar</type>
        </dependency>
        <dependency>
            <groupId>commons-io</groupId>
            <artifactId>commons-io</artifactId>
            <version>2.4</version>
            <type>jar</type>
        </dependency>
        <dependency>
            <groupId>org.jsoup</groupId>
            <artifactId>jsoup</artifactId>
            <version>1.11.2</version>
        </dependency>
    </dependencies>
</project>
